<div class="row">
    <div class="col-sm-8 col-md-10 offset-md-1 offset-sm-2">
        <div id="error" class="alert alert-danger" {{#if noMsg}} hidden {{/if}}>
            {{ errorMsg }}
        </div>
    </div>
</div>
{{# if products}}
    <div class="row" style="margin-top: 20px; margin-bottom: 20px;">
        <div class="col-sm-10 col-md-10 offset-md-1 offset-sm-1">
            <ul class="list-group">
                {{# each products}}
                    <li class="list-group-item">
                        <span class="pull-right">
                            <a href="/shopping-cart/reduceQty/{{this.item._id}}" role="button" class="btn btn-secondary btn-sm">-</a>
                            <input type="text" name="qty" value="{{ this.qty }}" style="width: 30px; vertical-align:bottom"/>
                            <a href="/shopping-cart/addQty/{{this.item._id}}" role="button" class="btn btn-secondary btn-sm">+</a>
                            <a href="/shopping-cart/deleteAllQty/{{this.item._id}}" role="button" class="btn btn-danger btn-sm"><i class="fa fa-trash fa-lg"></i></a>
                        </span>
                        
                        <strong>{{ this.item.title }}</strong>
                        <span class="badge badge-success">${{this.price}}</span>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row" style="margin-top: 20px; margin-bottom: 20px;">
        <div class="col-sm-10 col-md-10 offset-md-1 offset-sm-1">
            <strong>Total: {{totalPrice}} </strong>
        </div>
    </div>
    <hr />
    <div class="row"style="margin-top: 20px; margin-bottom: 20px;">
        <div class="col-sm-10 col-md-10 offset-md-1 offset-sm-1">
            <a href="/checkout" class="btn btn-success" type="button">Checkout</a>
        </div>
    </div>
{{else}}

    <div class="row" style="margin-top: 20px; margin-bottom: 20px;"      >
        <div class="col-sm-10 col-md-10 offset-md-1 offset-sm-1">
            <h2>No Items in cart</h2>
        </div>
    </div>

{{/if}}

