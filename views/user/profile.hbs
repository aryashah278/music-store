<div class="row">
    <div class="col-md-10 offset-md-1">
        <h1>User Profile</h1>
        <hr>  
        {{#if orderFlag}}
        <h2>My Orders</h2>
        {{#each orders }}
            <div class="card">
                <div class="card-body">
                    <ul class="list-group">
                        {{# each this.items }}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                {{this.item.title}} | {{this.qty}} Units
                                <span class="badge badge-primary badge-pill">{{this.price}}</span>
                            </li>
                        {{/each}}
                    </ul>                
                </div>
                <div class="card-footer">
                    <strong>Total Price: $ {{this.cart.totalPrice}}</strong>
                    <span class="pull-right">Order Date: {{format_date order_date}}</span>
                </div>
            </div>
        {{/each}}
        {{else}}
            <div class="offset-md-2">
                <h4>No orders to show</h4>
            </div>
        {{/if}}
    
        
    </div>
</div>